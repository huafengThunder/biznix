{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "lib": ["es2017", "dom"],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}